{
  "name": "boost-test-adapter-feher",
  "version": "3.2.4",
  "displayName": "Boost.Test Adapter",
  "description": "Run or debug your Boost.Test tests in the Sidebar of Visual Studio Code",
  "author": "Gabor Fekete <dev.feheren.fekete@gmail.com>",
  "publisher": "feheren-fekete",
  "license": "MIT",
  "homepage": "https://github.com/feher/vscode-boost-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/feher/vscode-boost-test-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/feher/vscode-boost-test-adapter/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "boost",
    "test",
    "testing"
  ],
  "icon": "icon.png",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rimraf lib *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build"
  },
  "dependencies": {
    "async-mutex": "^0.1.4",
    "dotparser": "^1.1.1",
    "tslib": "^1.14.1"
  },
  "devDependencies": {
    "@types/node": "8.9.3",
    "@types/vscode": "1.67.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.10"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Boost.Test Adapter",
      "properties": {
        "boost-test-adapter-feher.tests": {
          "description": "Test configurations.",
          "type": "array",
          "items": {
            "type": "object",
            "description": "Test configuration.",
            "properties": {
              "testExecutables": {
                "description": "List of test executables.",
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "A test executable.",
                  "properties": {
                    "path": {
                      "description": "Absolute or relative path to a test executable.",
                      "type": "string"
                    },
                    "label": {
                      "description": "Show this label in the test explorer UI instead of the Boost Test module name.",
                      "type": "string"
                    }
                  }
                }
              },
              "debugConfig": {
                "description": "The name of a launch configuration used for debugging.",
                "type": "string"
              },
              "envFile": {
                "description": "A simple key=value file with environment variables for running and debugging the tests.",
                "type": "string"
              },
              "env": {
                "description": "Environment variables for running and debugging the tests.",
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "Environment variable.",
                  "properties": {
                    "name": {
                      "description": "Name of the environment variable.",
                      "type": "string"
                    },
                    "value": {
                      "description": "Value of the environment variable.",
                      "type": "string"
                    }
                  }
                }
              },
              "cwd": {
                "description": "Working directory for the test executable.",
                "type": "string"
              },
              "sourcePrefix": {
                "description": "Used to convert relative source file paths to absolute paths. It's needed only if the test-case file paths are broken in the Test Explorer UI.",
                "type": "string"
              }
            }
          },
          "default": [],
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "boost-test-adapter-feher.copyTestItemPath",
        "title": "Copy Path"
      },
      {
        "command": "boost-test-adapter-feher.copyTestItemRelativePath",
        "title": "Copy Relative Path"
      },
      {
        "command": "boost-test-adapter-feher.copyBoostTestId",
        "title": "Copy Boost.Test ID"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "boost-test-adapter-feher.copyTestItemPath",
          "when": "false"
        },
        {
          "command": "boost-test-adapter-feher.copyTestItemRelativePath",
          "when": "false"
        },
        {
          "command": "boost-test-adapter-feher.copyBoostTestId",
          "when": "false"
        }
      ],
      "testing/item/context": [
        {
          "command": "boost-test-adapter-feher.copyTestItemPath",
          "group": "copypath@1"
        },
        {
          "command": "boost-test-adapter-feher.copyTestItemRelativePath",
          "group": "copypath@2"
        },
        {
          "command": "boost-test-adapter-feher.copyBoostTestId",
          "group": "copypath@3",
          "when": "testId =~ /^[a-f0-9]+\/[a-f0-9]+\/.+$/"
        }
      ]
    }
  }
}
